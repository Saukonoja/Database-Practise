<Window x:Class="MusicDatabase.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MusicDatabase"
        mc:Ignorable="d"
        Title="Music database" WindowState="Maximized" FontFamily="Noto Sans" Height="899" Width="1109">
    <Window.Resources>
        <Style TargetType="{x:Type TabItem}">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#ACCB12"/>
                </Trigger>
            </Style.Triggers>
            <Setter Property="Control.FontSize" Value="22px"/>
            <Setter Property="Control.Foreground" Value="White"/>
            <Setter Property="Control.Width" Value="250"/>

            <Setter Property="Background" Value="#ADADAD" />
            <Setter Property="Padding" Value="10,20,0,20" />
        </Style>
    </Window.Resources>
    <DockPanel>
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <TextBlock x:Name="sbStatus" FontSize="16" ></TextBlock>
            </StatusBarItem>
        </StatusBar>
        <Grid Background="#575757">
            <TextBlock Foreground="White" HorizontalAlignment="Left" Height="50" VerticalAlignment="Top" FontSize="32" Margin="10,10,0,5" Cursor="Hand">Music database</TextBlock>
            <Button x:Name="btnSignUp" Content="SIGN UP" Background="#ACCB12" BorderBrush="#ACCB12" Foreground="White" FontSize="16"  Margin="10,10,90,5" Width="80" Height="35" VerticalAlignment="Top" HorizontalAlignment="Right" Cursor="Hand" Click="btnSignUp_Click"/>
            <Button x:Name="btnLogin" Content="LOGIN" Background="#B8B8B8" BorderBrush="#B8B8B8" Foreground="White" FontSize="16"  Margin="0,10,10,5" Width="70"  Height="35" VerticalAlignment="Top" HorizontalAlignment="Right" Cursor="Hand" Click="btnLogin_Click"/>

            <StackPanel Margin="0,55,0,0">
                <StackPanel Background="#E3E3E3" Orientation="Horizontal" Height="50">
                    <TextBox x:Name="txtSearchFromDatabase" FontSize="18" Width="400" Margin="10,10,10,10" BorderThickness="0"></TextBox>
                    <Button x:Name="btnSearchFromDatabase" Content="Search from database" Background="#3FA9F5" BorderBrush="#3FA9F5" Foreground="White" FontSize="14" Margin="0,10,0,10" Width="200" Cursor="Hand" Click="btnSearchFromDatabase_Click" />
                </StackPanel>

                <TabControl Background="#575757" TabStripPlacement="Left" x:Name="tabControl" Margin="0,0,0,0" SelectionChanged="tabControl_SelectionChanged" BorderThickness="0">
                    <TabItem Header="Home" Height="70" x:Name="tabHome">
                        <TextBlock>Home</TextBlock>
                    </TabItem>
                    <TabItem Header="Artists" Height="70" x:Name="tabArtists">
                        <StackPanel HorizontalAlignment="Left">
                            <TextBlock>Lorem ipsum</TextBlock>
                            <TextBlock>Artists</TextBlock>
                            <Button x:Name="testConnection" Click="testConnection_Click">Test</Button>
                            <DataGrid x:Name="dgTest" Width="400" Height="220" ItemsSource="{Binding}"></DataGrid>
                        </StackPanel> 
                    </TabItem>
                    <TabItem Header="Albums" Height="70" x:Name="tabAlbums">
                        <TextBlock>Albums</TextBlock>
                    </TabItem>
                    <TabItem Header="Tracks" Height="70" x:Name="tabTracks">
                        <TextBlock>Tracks</TextBlock>
                    </TabItem>
                    <TabItem Header="Genres" Height="70" x:Name="tabGenres">
                        <TextBlock>Genres</TextBlock>
                    </TabItem>
                    <TabItem Header="Record companies" Height="70" x:Name="tabRecordCompanies">
                        <TextBlock>Record</TextBlock>
                    </TabItem>
                    <TabItem Header="About" Height="70" x:Name="tabAbout">
                        <TextBlock>About</TextBlock>
                    </TabItem>
                </TabControl>

            </StackPanel>
            <StackPanel Background="#B8B8B8" Orientation="Horizontal" Height="55" VerticalAlignment="Bottom">
                <TextBlock x:Name="tbCopyright" Text="© Music database 2016" HorizontalAlignment="Left" Foreground="White" FontSize="24" Margin="10,10,0,5"></TextBlock>
            </StackPanel>
            <Button x:Name="btnContact" HorizontalAlignment="Right" VerticalAlignment="Bottom" Content="Contact us" Background="#575757" BorderBrush="#575757" Foreground="White" 
                        FontSize="16" Margin="10,5,10,10" Width="100" Height="35" Cursor="Hand" Click="btnSignUp_Click"></Button>
        </Grid>
    </DockPanel>
</Window>
