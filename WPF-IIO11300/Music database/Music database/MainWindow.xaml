<Window x:Class="Music_database.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Music_database"
        mc:Ignorable="d"
        Title="Music database" WindowState="Maximized" FontFamily="Noto Sans" Height="899" Width="1109">
    <Window.Resources>
        <Style TargetType="{x:Type TextBlock}" x:Key="navigationTextBlock">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#ACCB12"/>
                </Trigger>
            </Style.Triggers>
            <Setter Property="Control.FontSize" Value="22px"/>
            <Setter Property="Control.Foreground" Value="White"/>
            <Setter Property="Control.Width" Value="250"/>
            <Setter Property="Control.Cursor" Value="Hand"/>
            <Setter Property="Background" Value="#ADADAD" />
            <Setter Property="Padding" Value="10,20,0,20" />
        </Style>
        <Style TargetType="{x:Type Border}" x:Key="borderNavigationTextBlock" >
            <Setter Property="Control.BorderBrush" Value="#808080"/>
            <Setter Property="Control.BorderThickness" Value="2"/>
        </Style>
        <Style TargetType="{x:Type TextBlock}" x:Key="mouseOverStyleTitle">
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid Background="#575757">
        <TextBlock Foreground="White" Style="{StaticResource mouseOverStyleTitle}" HorizontalAlignment="Left" Height="50" VerticalAlignment="Top" FontSize="32" Margin="10,0,0,5" Cursor="Hand">Music database</TextBlock>
        <Button x:Name="btnSignUp" Content="SIGN UP" Background="#ACCB12" BorderBrush="#ACCB12" Foreground="White" FontSize="16"  Margin="10,10,90,5" Width="80" Height="35" VerticalAlignment="Top" HorizontalAlignment="Right" Cursor="Hand" Click="btnSignUp_Click"/>
        <Button x:Name="btnLogin" Content="LOGIN" Background="#B8B8B8" BorderBrush="#B8B8B8" Foreground="White" FontSize="16"  Margin="0,10,10,5" Width="70"  Height="35" VerticalAlignment="Top" HorizontalAlignment="Right" Cursor="Hand" Click="btnLogin_Click"/>

        <StackPanel Margin="0,55,0,0">
            <StackPanel Background="#E3E3E3" Orientation="Horizontal" Height="50">
                <TextBox x:Name="txtSearchFromDatabase" FontSize="18" Width="400" Margin="10,10,10,10" BorderThickness="0"></TextBox>
                <Button x:Name="btnSearchFromDatabase" Content="Search from database" Background="#3FA9F5" BorderBrush="#3FA9F5" Foreground="White" FontSize="14" Margin="0,10,0,10" Width="200" Cursor="Hand" Click="btnSearchFromDatabase_Click" />
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <StackPanel Orientation="Vertical">
                    <Border Style="{StaticResource borderNavigationTextBlock}">
                        <TextBlock x:Name="tbHome" Text="Home" Style="{StaticResource navigationTextBlock}"></TextBlock>
                    </Border>
                    <Border Style="{StaticResource borderNavigationTextBlock}">
                        <TextBlock x:Name="tbArtists" Text="Artists" Style="{StaticResource navigationTextBlock}"></TextBlock>
                    </Border>
                    <Border Style="{StaticResource borderNavigationTextBlock}">
                        <TextBlock x:Name="tbAlbums" Text="Albums" Style="{StaticResource navigationTextBlock}"></TextBlock>
                    </Border>
                    <Border Style="{StaticResource borderNavigationTextBlock}">
                        <TextBlock x:Name="tbTracks" Text="Tracks" Style="{StaticResource navigationTextBlock}"></TextBlock>
                    </Border>
                    <Border Style="{StaticResource borderNavigationTextBlock}">
                        <TextBlock x:Name="tbGenres" Text="Genres" Style="{StaticResource navigationTextBlock}"></TextBlock>
                    </Border>
                    <Border Style="{StaticResource borderNavigationTextBlock}">
                        <TextBlock x:Name="tbRecordCompanies" Text="Record companies" Style="{StaticResource navigationTextBlock}"></TextBlock>
                    </Border>
                    <Border Style="{StaticResource borderNavigationTextBlock}">
                        <TextBlock x:Name="tbAbout" Text="About" Padding="10,20,0,20" Style="{StaticResource navigationTextBlock}"></TextBlock>
                    </Border>
                </StackPanel>
                <StackPanel>
                    <TextBlock>Lorem ipsum</TextBlock>
                </StackPanel>
            </StackPanel>
        </StackPanel>
        <StackPanel Background="#B8B8B8" Orientation="Horizontal" Height="55" VerticalAlignment="Bottom">
            <TextBlock x:Name="tbCopyright" Text="© Music database 2016" HorizontalAlignment="Left" Foreground="White" FontSize="24" Margin="10,5,0,5" Cursor="Hand"></TextBlock>
        </StackPanel>
        <Button x:Name="btnContact" HorizontalAlignment="Right" VerticalAlignment="Bottom" Content="Contact us" Background="#575757" BorderBrush="#575757" Foreground="White" 
                        FontSize="16" Margin="10,5,10,10" Width="100" Height="35" Cursor="Hand" Click="btnSignUp_Click"></Button>
    </Grid>
</Window>
